{
  "parser": "babel-eslint",
  "plugins": ["jest"],
  "extends": "airbnb",
  "env": {
    "node": true,
    "mocha": true,
    "jest": true
  },
  "globals": {
    "localStorage": true,
    "fetch": true,
    "document": true,
    "window": true
  },
  "settings": {
    "import/resolve": {
      "moduleDirectory": ["node_modules", "src"]
    },
    "ecmaFeatures": {
      "classes": true,
      "jsx": true
    }
  },
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/no-array-index-key": "off",
    "no-shadow": "off",
    "jsx-a11y/click-events-have-key-events": "off"
  }
}
